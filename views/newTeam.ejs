<!DOCTYPE html>
<html>
  <%- include('./header'); -%>
  <%- include('./navs'); -%>
  <%_ if (!user) { -%>
    <%- include('./login'); -%>
  <%_ } else { -%>
    <form id="create">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Create A New Team</h5>
        <p class="card-text">Want to join the league? Awesome! Get started by entering your team name below</p>
        <input type="text" class="pr-3" name="_id">
        <button class="btn btn-primary ml-2">Create Your Team</button>
      </div>
    </div>
  </form>
    <script
      src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous">
    </script>
    <script>
      $('#create').on('submit', function(event){
        event.preventDefault();
        const form = $(this);
        $.ajax({method: 'post', url: '/teams', data: form.serialize()})
          .done(() => window.location.replace('/teams/manage'))
          .fail(error => alert(error.responseText));
      });

    </script>
    <%_ } -%>
    <script>
      $('.active').removeClass('active');
      $('#newTeam').addClass('active');
    </script>
</html>
