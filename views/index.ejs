<!DOCTYPE html>
<html>
  <%- include('./navs'); -%>
  <header class="navbar navbar-expand custHead mb-2 shadow">
    <a class="navbar-brand" href="/">
      <img src="https://static.nfl.com/static/content/public/static/wildcat/assets/img/application-shell/shield/default.svg" style="width: 50px">
      <span class="text-light pl-2" id="headText">Fantasy Football</span>
    </a>
    <button type="submit" name="signIn" class="ml-auto nav-item btn btn-sm btn-outline-light"><img src="https://raw.githubusercontent.com/iconic/open-iconic/master/svg/account-login.svg"
      class="mr-1 whiteSVG" style="height: 18px" id="login">Sign-in</button>

    <nav class= "navbar-nav">
  </header>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>

  $('#login').on('submit', function(event) {
    const form = $(this);
    event.preventDefault();
    $.ajax({method: 'post', url: '/users', data: form.serialize()})
      .done(id => window.location.replace('/admin'))
      .fail(error => alert("could not login"));
  });
  </script>

</html>
